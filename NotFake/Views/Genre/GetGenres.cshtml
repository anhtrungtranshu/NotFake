@model List<NotFake.Models.MainPageViewModel>

@{
    ViewData["Title"] = "GetGenres";
}

<h2>GetGenres</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p>@Html.DisplayFor(modelItem => item.Genre.Name)</p>
                <div style="border: 2px solid #bababa">
                    <h4>Films</h4>
                    <div id="@item.Genre.Name" class="carousel slide" data-ride="carousel" data-interval="6000">
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < item.Films.Count(); i++)
                            {
                                <li data-target="#@item.Genre.Name" data-slide-to="@i" class="@(i == 0 ? "active" : string.Empty)"></li>
                            }
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            @for (int i = 0; i < item.Films.Count(); i++)
                            {
                                <div class="item @(i == 0 ? "active" : string.Empty)">
                                    <img src="@item.Films.ElementAt(i).ThumbnailAddress" alt="ASP.NET" class="img-responsive" />
                                    <div class="carousel-caption" role="option">
                                        <p>@item.Films.ElementAt(i).Name</p>
                                    </div>
                                </div>

                            }
                        </div>
                        <a class="left carousel-control" href="#@item.Genre.Name"  role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#@item.Genre.Name"   role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    
                </div>
            </td>

           
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.Genre">Edit</a> |
                <a asp-action="GetFilmsInGenre" asp-route-id="@item.Genre">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Genre">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
