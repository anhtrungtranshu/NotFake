@model NotFake.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_StandAlone.cshtml";
}
<section id="signup" class="signup-section">
 <div class="container" >
    <div class="row" >
    <div class="col-md-10 col-lg-8 mx-auto text-center">
        <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
        <h2 class="text-white mb-5">Register</h2>
        <form autocomplete="off" method="post" asp-controller="Auth" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="form form__single-form" >
            <div class="form-group row">
                @* <label asp-for="Email" class="control-label">Email address</label > *@
                <label for="inputEmail" class="col-sm-2 col-md-3 col-form-label text-white text-left">Email</label>
                <div class="col-sm-10 col-md-9">
                    <div class="input-group">
                    <input type="email" asp-for="Email" class="form-control mr-0 mr-sm-2 mb-3 mb-sm-0" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email address...">
                    <i class="fas fa-exclamation text-danger"></i>
                    </div>
                </div>
                <small id="emailHelp" asp-validation-for="Email" class="form-text text-danger"></small>
            </div>
            
            <div class="form-group" >
            <label asp-for="Email" class="control-label" > Email address</label >
            <input asp-for="Email" class="form-control" / >
            <span asp-validation-for="Email" class="text-danger" > </span >
            </div>
            <div class="form-group" >
            <label asp-for="Fullname" class="control-label" > Full Name</label >
            <input asp-for="Fullname" class="form-control" / >
            <span asp-validation-for="Fullname" class="text-danger" > </span >
            </div>
            <div class="form-group" >
            <label asp-for="Password" class="control-label" > Password</label >
            <input asp-for="Password" class="form-control" / >
            <span asp-validation-for="Password" class="text-danger" > </span >
            </div>
            <div class="form-group" >
            <label asp-for="ConfirmPassword" class="control-label" > Enter Password again</label >
            <input asp-for="ConfirmPassword" class="form-control" / >
            <span asp-validation-for="ConfirmPassword" class="text-danger" > </span >
            </div>
            <div class="form-group" >
            <input type="submit" value="Create" class="btn btn-default" / >
            </div>
        </form >
    </div>
    </div>
</div>
</section>
   
