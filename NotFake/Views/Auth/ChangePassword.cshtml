@model NotFake.Models.ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_StandAlone.cshtml";
}

<div class="float-navigation left">
    <a id="BackToPreviousPage" href="@ViewData["ReturnUrl"]"  class="text-white float-navigation__link">
        <i class="fas fa-arrow-left fa-2x text-white"></i>
        <span class="ml-2">Back</span>
    </a>
</div>

<section id="signup" class="signup-section">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
          <div class="col-12 text-center">
            @* <i class="far fa-paper-plane fa-2x mb-2 text-white"></i> *@
            <i class="fas fa-american-sign-language-interpreting fa-2x mb-2 text-white"></i>
            <h2 class="text-white mb-2">Change Password</h2>
          </div>
          <form autocomplete="off" method="post" asp-controller="Auth" asp-action="ChangePassword" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div class="form-group">
                    <label asp-for="Password" class="col-form-label text-white">Password</label>
                    <div class="input-group input-group__with-icon">
                      <input type="password" asp-for="Password" class="form-control mr-0 mb-3 mb-sm-0" id="Password" placeholder="Enter current password...">
                      @if(ViewData.ModelState.Keys.Contains("Password"))
                      {
                        <div class="icon-content" data-toggle="tooltip" data-html="true" title='@Utility.ValidationErrorsTooltip(ViewData.ModelState["Password"].Errors)'>
                          <i class="fas fa-exclamation text-danger"></i>
                        </div>
                      }
                  </div>
                </div>

                <div class="form-group">
                  <label asp-for="NewPassword" class="col-form-label text-white">New password</label>
                  <div class="input-group input-group__with-icon">
                    <input type="password" asp-for="NewPassword" class="form-control mr-0 mb-3 mb-sm-0" id="fullname" placeholder="Enter new password...">
                    @if(ViewData.ModelState.Keys.Contains("NewPassword"))
                    {
                      <div class="icon-content" data-html="true" data-toggle="tooltip" title='@Utility.ValidationErrorsTooltip(ViewData.ModelState["NewPassword"].Errors)'>
                        <i class="fas fa-exclamation text-danger"></i>
                      </div>
                    }
                  </div>
                </div>

               <div class="form-group">
                  <label asp-for="ConfirmNewPassword" class="col-form-label text-white">Confirm new password</label>
                  <div class="input-group input-group__with-icon">
                    <input type="password" asp-for="ConfirmNewPassword" class="form-control mr-0 mb-3 mb-sm-0" id="password" placeholder="Re-enter new password...">
                    @if(ViewData.ModelState.Keys.Contains("ConfirmNewPassword"))
                    {
                      <div class="icon-content" data-html="true" data-toggle="tooltip" title='@Utility.ValidationErrorsTooltip(ViewData.ModelState["ConfirmNewPassword"].Errors)'>
                        <i class="fas fa-exclamation text-danger"></i>
                      </div>
                    }
                  </div>
                </div>
            <button type="submit" class="btn btn-primary mt-2 mx-auto btn-block">Change password</button>
            <p class="text-danger">@ViewBag.ErrorMessage</p>
          </form>

        </div>
      </div>
    </div>
</section>
