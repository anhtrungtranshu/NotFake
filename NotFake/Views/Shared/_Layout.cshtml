<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NotFake</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
        <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/grayscale/css/grayscale.css">

        <link rel="stylesheet" href="~/lib/slick/css/slick.css">
        <link rel="stylesheet" href="~/lib/slick/css/slick-theme.css">

        <!-- Javascript -->
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/moment.js"></script>
        <script src="~/js/notify.js"></script>
        <script src="~/lib/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
        <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/grayscale/grayscale.css">

        <link rel="stylesheet" href="~/lib/slick/css/slick.css">
        <link rel="stylesheet" href="~/lib/slick/css/slick-theme.css">

        <!-- Javascript -->
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/moment.js"></script>
        <script src="~/js/notify.js"></script>
        <script src="~/lib/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
</head>
<body id="page-top">
    <div class="static-background"></div>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top" id="mainNav">
        <div class="container-fluid">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">Not Fake</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
            </ul>

            @await Component.InvokeAsync("HeaderButtonGroups")
            </div>
        </div>
    </nav>

    @* <partial name="_CookieConsentPartial" /> *@
    <div class="main">
        @RenderBody()
    </div>

    <!-- Footer -->
    @* <footer class="bg-black small text-center text-white-50">
    <div class="container">
        Copyright &copy; Your Website 2019
    </div>
    </footer> *@

    <environment include="Development">
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/lib/grayscale/js/grayscale.js"></script>

        <script src="~/lib/slick/js/slick.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/lib/grayscale/js/grayscale.js"></script>

        <script src="~/lib/slick/js/slick.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
