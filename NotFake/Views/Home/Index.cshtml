@foreach (var genre in Model)
{
<h3 class="text-white">@Html.DisplayFor(modelItem => genre.Genre.Name)</h3>

    <div class="slick-carousel">
        @foreach (var item in genre.Films)
        {
            <a class="slick-carousel__item-wrapper mr-1 ml-1" asp-controller="Film" asp-action="Index" asp-route-id="@item.FilmId">
                <img data-lazy="@item.ThumbnailAddress" alt="film-picture">
            </a>
        }
    </div>
}
